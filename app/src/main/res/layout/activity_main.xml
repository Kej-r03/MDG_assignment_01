<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/divider"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/colorbox"
        android:layout_width="525px"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="#917CDD"></TextView>

    <TextView
        android:id="@+id/colorbox2"
        android:layout_width="525px"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="#E40000"></TextView>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/r" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="600px"
        android:layout_height="100px"
        android:text="Shake to Swap Colours"
        android:layout_centerInParent="true"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center_horizontal|center_vertical" />

    <View
        android:id="@+id/divider"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:layout_alignParentLeft="true"/>

    <View
        android:id="@+id/divider"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:layout_alignParentRight="true"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/black" />
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/black"
        android:layout_alignParentBottom="true"/>

       android:layout_width="350sp"
       android:layout_height="50dp"
       android:layout_centerHorizontal="true">
    <View
        android:id="@+id/top"
        android:layout_height="50dp"
        android:layout_width="350sp"
        android:background="@drawable/box1"
        android:layout_centerHorizontal="true"/>

       <TextView
           android:id="@+id/message"
           android:layout_width="290sp"
           android:layout_height="40dp"
           android:layout_marginTop="7dp"
           android:paddingLeft="25dp"
           android:layout_centerHorizontal="true"
           android:background="@color/black"
           android:text="Welcome to Shake Detector"
           android:textColor="@color/white"
           android:textSize="20dp" />
    <View
        android:id="@+id/bottom"
        android:layout_height="50dp"
        android:layout_width="350sp"
        android:background="@drawable/box2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="290sp"
        android:layout_height="40dp"

        android:paddingLeft="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:text="Hope You Will Like It :)"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="100dp"
        app:srcCompat="@drawable/skull" />

</RelativeLayout>